<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.christianmz.organizze">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
        </activity>
        <activity
                android:name=".intro.OnBoardingActivity"
                android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".intro.RegisterActivity"
                android:parentActivityName=".intro.OnBoardingActivity">
        </activity>
        <activity android:name=".intro.LoginActivity"
                android:parentActivityName=".intro.OnBoardingActivity">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>